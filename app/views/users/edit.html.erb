<h2>User info</h2>
<%= form_with model: @user, url: user_path(@user.id),method: :patch do |f| %>
  <label for="inputName">Name</label>
  <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%>
  <label for="inputImage">Image</label>
  <%= f.file_field :image, placeholder: "プロフィール画像", accept: "image/*" %>

  <label for="inputName">Introduction</label>
  <%= f.text_field :introduction, autofocus: true, id:"inputIntroduction", placeholder:"自己紹介文"%>

  <%= f.submit "Update User" %>
<% end %>