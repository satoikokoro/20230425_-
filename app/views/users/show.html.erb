<p id="notice"></p>

<div class="container px-5 px-sm-0">
  <div class="row">

    <%= render 'books/list',{book: @book,user: @user} %>

    <div class="col-md-8 offset-md-1">

      <h2>Books</h2>

      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
           <th>Title</th>
           <th>Opinion</th>
           <th colspan="3"></th>
           </tr>
        </thead>

      <% @user.books.each do |book| %>
        <tbody>
          <tr>
            <td><%= image_tag @user.get_image,size:"100x100" %></td>

             <td><%= link_to book_path(book.id) do %>
              <%= book.title %>
              <% end %>
              </td>
              <td><%= book.body %></td>
          </tr>
        </tbody>
      <% end %>
      </table>
    </div>
  </div>
</div>