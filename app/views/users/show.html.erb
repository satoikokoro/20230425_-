<%= render 'books/list',{book: @book,user: @user} %>



<h2>Books</h2>
<table>
  <thead>
    <tr>
     <th>Title</th>
     <th>Opinion</th>
     <th colspan="3"></th>
    </tr>
  </thead>

<% @users.each do |user| %>
  <tbody>
    <tr>
      <th><%= image_tag user.get_image %></th>
      <th><%= user.books.title %></th>
      <th><%= user.books.body %></th>
    </tr>
  </tbody>
<% end %>

</table