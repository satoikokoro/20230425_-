
<%= render 'list',{book: @book,user: @user} %>

<p id="notice"></p>

<h1>Books</h1>

<table>
  <thead>
    <tr>
     <th>Title</th>
     <th>Opinion</th>
     <th colspan="3"></th>
    </tr>
  </thead>

<% @books.each do |book| %>

  <tbody>
    <tr>

      <th><%= image_tag book.user.get_image %></th>


      <th>
        <%= link_to book_path(book.id) do %>
        <%= book.title %>
        <% end %>
      </th>

      <th><%= book.body %></th>
    </tr>
  </tbody>
<% end %>

</table>
